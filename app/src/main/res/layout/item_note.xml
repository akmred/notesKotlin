<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/item_noteMarginCommon"
    android:layout_marginStart="@dimen/item_noteMarginCommon"
    android:layout_marginTop="@dimen/item_noteMarginCommon"
    android:layout_marginBottom="@dimen/item_noteMarginCommon"
    android:id="@+id/container"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/textviewTitle"
            android:layout_marginStart="@dimen/textviewMarginStart"
            android:layout_marginTop="@dimen/textviewMarginTop"
            tools:text="@string/titleTextCommonInAdapterToolText"/>

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textviewMargin"
            tools:text="@string/textViewDownInAdapterToolText"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>